<%= simple_form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <% if !@task.new_record? %>
  <%= f.label :completed %>
  <%= f.check_box :completed %>
  <% end %>
  <%= f.submit %>
<% end %>

<p><%= link_to 'Back to all tasks', tasks_path %></p>
